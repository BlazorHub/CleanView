@page "/counter"
<BackgroundSetter Url="background.jpg" FootNote="Far north coast NSW, looking towards the Gold Coast QLD. Australia"/>

<div class="bg-white p-3 rounded clean-view-shadow fade-in-03">
    <h1>Counter</h1>

    <p>Current count: @currentCount</p>

    <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
</div>
@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
