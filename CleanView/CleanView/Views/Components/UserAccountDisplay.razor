@using Microsoft.AspNetCore.Components.Authorization
@namespace CleanView

<AuthorizeView Context="IPrinciple">
    <Authorizing>
        <em class="text-white">Authenticating...</em>
    </Authorizing>
    <Authorized>
        <NavPanelMenuItem Name="@($"Hello, {ShortName(IPrinciple.User.Identity.Name)}!")" Icon="oi-person" href="authentication/profile" />
        <NavPanelMenuItem Name="Log out" Icon="oi-account-logout" @onclick="BeginSignOut" />
    </Authorized>
    <NotAuthorized>
        <NavPanelMenuItem Name="Register" Icon="oi-key" href="authentication/register" />
        <NavPanelMenuItem Name="Log in" Icon="oi-account-login" href="authentication/login" />
    </NotAuthorized>
</AuthorizeView>

